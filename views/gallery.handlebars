<div class="container">
    <header>
        <h1>Existent-Shell Designs</h1>
        <p>Unique art pieces</p>
    </header>

    <main class="grid">
        
        {{#each items}}
        <div class="gallery-item" id="portfolio">
            <img class="img" src="images/{{this.imgSource}}" alt="{{this.title}}" style="width:100%">
            <div class="piece-desc">
                <div id="title" class="ch">{{this.title}}</div>
                <p class="text">{{this.descript}}</p>
                <p id="price" class="text">Price: ${{this.price}}.00</p>
                <a href="#" class="purchase btn btn-primary" data-id={{this.id}} data-price={{this.price}}
                    data-title={{this.title}}>Purchase</a>
            </div>
        </div>
        {{/each}}
       
    </main>


    {{!-- <form method="POST" action="/checkout"> --}}
    <ul id="cart-list" class="list-group">
    </ul>
    <button id="checkoutBtn" class="btn btn-primary">Checkout</button>

    {{!-- </form> --}}


    <div class="footer">Made by M</div>

</div>